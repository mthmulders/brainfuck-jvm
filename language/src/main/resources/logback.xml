<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="it.mulders" level="trace"/>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>